{
  "include": ["./src/**/*", "vite.config.ts", "jest.config.ts"],
  "exclude": [
    "src/Hooks/useCollisionDetection/useCollisionDetection.spec.tsx",
    "src/Hooks/useColour/useColour.spec.tsx",
    "src/Hooks/useChangeDelta/useChangeDelta.spec.tsx"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vite/client", "vite-plugin-svgr/client", "vitest/globals"],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true
  }
}
